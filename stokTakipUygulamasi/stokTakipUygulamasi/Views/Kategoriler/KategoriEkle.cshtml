@model stokTakipUygulamasi.Models.Entity.Kategoriler

@{
    ViewBag.Title = "KategoriEkle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<div class="container">
    @using (Html.BeginForm("KategoriEkle", "Kategoriler", FormMethod.Post))
    {
        <form action="/KAtegoriler/KategoriEkle/">
            <div>
                <div class="form-group">
                    <label>Kategori Adı</label>
                    <input type="text" class="form-control" name="Kategori" required="" />
                    @Html.ValidationMessageFor(x => x.Kategori, "", new { @class = "text-danger" })
                </div>

                <div class="form-group">
                    <label>Açıklama</label>
                    <textarea name="Aciklama" class="form-control"></textarea>
                    @Html.ValidationMessageFor(x => x.Aciklama, "", new { @class = "text-danger" })
                </div>

                <div style="margin-top:20px"></div>
                <button class="btn btn-info">Kategori Ekle</button>
                <div />




            </div>
        </form>
    }
</div>

@section scriptdanger
{
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>

}


