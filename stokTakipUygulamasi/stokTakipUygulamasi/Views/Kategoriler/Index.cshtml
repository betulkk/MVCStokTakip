@using stokTakipUygulamasi.Models.Entity
@model List<stokTakipUygulamasi.Models.Entity.Kategoriler>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<table class="table table-bordered">
    <thead style="background-color:aqua">
        <tr>
            <th>ID</th>
            <th>Kategori</th>
            <th>Açıklama</th>
            <th>SİL</th>
            <th>GÜNCELLE</th>

        </tr>
    </thead>


    <tbody>
        @foreach (var kat in Model)
        {
            <tr>
                <td>@kat.id</td>
                <td>@kat.Kategori</td>
                <td>@kat.Aciklama</td>
                <td>
                    <a href="/Kategoriler/SİL/@kat.id" class="btn btn-danger">SİL</a>
                </td>
                <td>
                    <a href="/Kategoriler/GuncelleBilgiGetir/@kat.id" class="btn btn-success">GÜNCELLE</a>
                </td>

            </tr>
        }
    </tbody>
</table>

<a href="/Kategoriler/KategoriEkle/" class="btn btn-primary">YENİ KATEGORİ EKLE</a>
