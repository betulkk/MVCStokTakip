@model stokTakipUygulamasi.Models.Entity.Markalar

@{
    ViewBag.Title = "MarkaGetir";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    @using (Html.BeginForm("MarkaGuncelle", "Markalar"))
    {

        @Html.HiddenFor(x => x.id)
        <div class="form-group">
            @Html.LabelFor(x => x.Kategoriler.Kategori, "KATEGORİ")
            @Html.DropDownListFor(x => x.KategoriID, (List<SelectListItem>)ViewBag.l, "Seçiniz", new { @class = "form-control" })
            @Html.ValidationMessageFor(x => x.KategoriID, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            @Html.LabelFor(x => x.Marka, "MARKA")
            @Html.TextBoxFor(x => x.Marka, new { @class = "form-control" })
            @Html.ValidationMessageFor(x => x.Marka, "", new { @class = "text-danger" })

        </div>

        <div class="form-group">
            @Html.LabelFor(x => x.Aciklama, "AÇIKLAMA")
            @Html.TextAreaFor(x => x.Aciklama, new { @class = "form-control" })
            @Html.ValidationMessageFor(x => x.Aciklama, "", new { @class = "text-danger" })

        </div>

        <div>
            <button class="btn btn-primary">MARKA GÜNCELLE</button>
        </div>




    }




</div>
@section scriptdanger
{
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>

}

